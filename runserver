#!/usr/bin/env plash-exec

--from ubuntu:focal

--apt
python3-pip
gunicorn

--layer

--run
pip3 install flask
pip3 install redispy
pip3 install device_detector
pip3 install pycountry

--layer


--entrypoint-script
mount -t tmpfs none ~/.local
ls ~/.local
gunicorn main:app \
  --bind 0.0.0.0:8000 \
  --log-file - \
  --error-logfile - \
  --access-logfile -
